        <div class="fleft">
            <div class="four columns">
                <div class="widget">
                    <h5>Marques</h5>
                    <ul>
                        <li><a href="{{ path('cle_catalogue_affichequincaillerie', {'categorie': categorie}) }}">Toutes les marques</a></li>
